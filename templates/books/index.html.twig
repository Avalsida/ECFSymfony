{% extends 'base.html.twig' %}

{% block title %}Liste des Livres{% endblock %}

{% block body %}
<div class="container mt-5 content-container" style="overflow-y: auto; height: 100vh;">
    <h1>Liste des Livres</h1>
    <div class="row">
        {% for book in books %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    {% if book.image %}
                        <img src="{{ book.image }}" class="card-img-top" alt="{{ book.titre }}">
                    {% else %}
                        <img src="https://via.placeholder.com/150" class="card-img-top" alt="Pas d'image">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ book.titre }}</h5>
                        <p class="card-text">Auteur : {{ book.auteur }}</p>
                        <p class="card-text">Année de Publication : {{ book.anneePublication }}</p>
                        <p class="card-text">Note Moyenne : 
                            {% if bookNotes[book.id] is not empty %}
                                {{ bookNotes[book.id]|number_format(2) }}
                            {% else %}
                                N/A
                            {% endif %}
                        </p>
                        <a href="{{ path('book_details', {'id': book.id}) }}" class="btn btn-primary">Voir Détails</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
